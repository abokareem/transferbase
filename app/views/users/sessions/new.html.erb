<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' } ) do |f| %>
  <h2 class="form-login-heading">Transferbase Log in</h2>

  <div class="form-group">
    <label>Email</label>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Password</label>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <%= f.submit 'Log In', class: 'btn btn-lg btn-primary btn-block' %>

  <br>

  <div>
    <label>Not a member yet? </label> <%= link_to 'Sign up', new_registration_path(resource_name) %>
  </div>
<% end %>
